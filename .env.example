# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/task-manager

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ASSISTANT_ID=your-assistant-id-here

# Google Calendar API
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your-private-key-here
GOOGLE_CALENDAR_ID=primary

# SMS Notifications (Google Voice)
GOOGLE_VOICE_EMAIL=your-email@gmail.com
GOOGLE_VOICE_PASSWORD=your-app-specific-password

# Default Settings
DEFAULT_TIMEZONE=America/Chicago
NOTIFICATION_QUIET_HOURS_START=22:00
NOTIFICATION_QUIET_HOURS_END=08:00
DEFAULT_TASK_DURATION=3600000  # 1 hour in milliseconds

# Additional Settings (Optional)
# MAX_TASKS_PER_DAY=10
# DEFAULT_BREAK_DURATION=900000  # 15 minutes in milliseconds
# AI_LEARNING_STYLE=moderate    # conservative, moderate, or aggressive
